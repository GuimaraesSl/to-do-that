<% content_for :title, "Home" %>
<div class="container mx-auto">
  <h1 class="text-4xl font-bold text-center mb-6">Bem-vindo</h1>
  <%
=begin%>
 <div class="flex justify-center mt-6">
      <div class="grid grid-cols-1 md:grid-cols-3 gap-4 pt-4">
        <div class="flex flex-col gap-4 md:col-span-1">
          <%= render partial: 'home/daily_streak', locals: { daily_streak: @daily_streak } %>
          <%= render partial: "home/task_distribution_pie_chart", locals: { data: @task_distribution_data } %>
        </div>
        <div class="h-full w-full md:col-span-1">
          <%= render partial: "home/completed_tasks_bar_chart", locals: { data: @metrics.completed_tasks_per_board } %>
        </div>
        <div class="h-full w-full md:col-span-1">
          <%= render partial: "home/productive_days_bar_chart", locals: { data: @productive_days_data } %>
        </div>
      </div>
  </div> 
<%
=end%>
</div>