<div class="flex items-center justify-center bg-base-200">
  <div class="card w-full max-w-md bg-base-100 shadow-xl p-8">
    <h2 class="text-2xl font-bold text-center mb-6">Criar Conta</h2>

    <%= form_with model: resource, url: registration_path(resource_name), local: true, class: "space-y-4" do |f| %>
      <% if resource.errors.any? %>
        <div class="alert alert-error">
          <ul class="list-disc pl-5">
            <% resource.errors.full_messages.each do |message| %>
              <li><%= message %></li>
            <% end %>
          </ul>
        </div>
      <% end %>

      <div>
        <%= f.label :full_name, "Nome completo", class: "label text-sm" %>
        <%= f.text_field :full_name, autofocus: true, class: "input input-bordered w-full", autocomplete: "name" %>
      </div>

      <div>
        <%= f.label :email, class: "label text-sm" %>
        <%= f.email_field :email, autocomplete: "email", class: "input input-bordered w-full" %>
      </div>

      <div>
        <%= f.label :password, class: "label text-sm" %>
        <% if @minimum_password_length %>
          <em class="text-xs text-gray-400">mínimo de <%= @minimum_password_length %> caracteres</em>
        <% end %>
        <%= f.password_field :password, autocomplete: "new-password", class: "input input-bordered w-full mt-1" %>
      </div>

      <div>
        <%= f.label :password_confirmation, class: "label text-sm" %>
        <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "input input-bordered w-full" %>
      </div>

      <div class="form-control mt-4">
        <%= f.submit "Registrar", class: "btn btn-primary w-full" %>
      </div>
    <% end %>

    <div class="divider">ou</div>

    <%= link_to user_google_oauth2_omniauth_authorize_path, class: "btn btn-outline btn-info w-full" do %>
      <i class="fa-brands fa-google mr-2"></i> Entrar com Google
    <% end %>

    <p class="text-center text-sm mt-4">
      Já tem uma conta? <%= link_to "Entrar", new_user_session_path, class: "link link-primary" %>
    </p>
  </div>
</div>